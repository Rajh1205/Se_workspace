#include <stdio.h>
#include <string.h>

int main()
{
    int num, quantity;
    int total = 0;
    char choice[10];   // to store yes/no

    do
    {
        // Display menu
        printf("\n----- MENU -----");
        printf("\n1. Pizza  = 100");
        printf("\n2. Burger = 110");
        printf("\n3. Dosa   = 130");
        printf("\n4. Idli   = 150");

        printf("\nSelect the item (1-4): ");
        scanf("%d", &num);

        switch (num)
        {
        case 1:
            printf("You have selected Pizza");
            printf("\nEnter the quantity: ");
            scanf("%d", &quantity);
            total += 100 * quantity;
            break;

        case 2:
            printf("You have selected Burger");
            printf("\nEnter the quantity: ");
            scanf("%d", &quantity);
            total += 110 * quantity;
            break;

        case 3:
            printf("You have selected Dosa");
            printf("\nEnter the quantity: ");
            scanf("%d", &quantity);
            total += 130 * quantity;
            break;

        case 4:
            printf("You have selected Idli");
            printf("\nEnter the quantity: ");
            scanf("%d", &quantity);
            total += 150 * quantity;
            break;

        default:
            printf("Please select an item from the menu.");
            break;
        }

        printf("\nTotal amount so far = %d", total);

        printf("\nDo you want to add more order? (yes/no): ");
        scanf("%s", choice);

    } while (strcmp(choice, "yes") == 0);

    printf("\nFinal total amount = %d", total);
    printf("\nVisit again!\n");

    return 0;
}
